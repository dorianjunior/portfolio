{% extends "layouts/main.twig" %}

{% block content %}
<section class="error-page">
    <div class="container">
        <div class="error-content">
            <h1 class="error-code">404</h1>
            <h2 class="error-title">{{ title|default('Página não encontrada') }}</h2>
            <p class="error-message">{{ message|default('A página que você está procurando não existe.') }}</p>
            <a href="/" class="btn btn-primary">Voltar para o Início</a>
        </div>
    </div>
</section>
{% endblock %}
