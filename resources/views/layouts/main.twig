<!DOCTYPE html>
<html lang="{{ current_language }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ description|default(trans('home.description')) }}">
    <title>{{ title|default(trans('home.title')) }} - {{ app_name }}</title>
    
    {# Favicon #}
    <link rel="icon" type="image/x-icon" href="/assets/img/favicon/favicon.ico">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/img/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/img/favicon/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/img/favicon/apple-touch-icon.png">
    <link rel="manifest" href="/assets/img/favicon/site.webmanifest">
    
    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    {# Font Awesome Icons #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    {# AOS - AnimaÃ§Ãµes ao Scroll #}
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    
    {# Seu CSS customizado #}
    <link rel="stylesheet" href="/assets/css/style.css">
    
    {% block styles %}{% endblock %}
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a href="{{ route('') }}" class="logo">
                <img src="/assets/img/logo.png" alt="{{ app_name }}" class="logo-img">
                <span class="logo-text">{{ app_name }}</span>
            </a>
            <ul class="nav-menu">
                <li><a href="{{ route('') }}" class="nav-link">{{ trans('nav.home') }}</a></li>
                <li><a href="{{ route('projetos') }}" class="nav-link">{{ trans('nav.projects') }}</a></li>
                <li><a href="{{ route('sobre') }}" class="nav-link">{{ trans('nav.about') }}</a></li>
                <li><a href="{{ route('contato') }}" class="nav-link">{{ trans('nav.contact') }}</a></li>
            </ul>
            
            {# Seletor de idioma #}
            <div class="language-selector">
                <button class="language-btn" id="languageBtn">
                    <i class="fas fa-globe"></i>
                    <span>{{ current_language|upper }}</span>
                </button>
                <div class="language-dropdown" id="languageDropdown">
                    {% for lang in available_languages %}
                        <a href="/set-language/{{ lang }}" class="language-option {% if lang == current_language %}active{% endif %}">
                            <span class="flag">{{ lang == 'pt' ? 'ðŸ‡§ðŸ‡·' : (lang == 'en' ? 'ðŸ‡ºðŸ‡¸' : 'ðŸ‡ªðŸ‡¸') }}</span>
                            <span>{{ lang == 'pt' ? 'PortuguÃªs' : (lang == 'en' ? 'English' : 'EspaÃ±ol') }}</span>
                        </a>
                    {% endfor %}
                </div>
            </div>
            
            <button class="mobile-menu-toggle">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </nav>

    <main>
        {% block content %}{% endblock %}
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>{{ app_name }}</h3>
                    <p>{{ trans('footer.description') }}</p>
                </div>
                <div class="footer-section">
                    <h3>{{ trans('footer.quick_links') }}</h3>
                    <ul>
                        <li><a href="{{ route('') }}">{{ trans('nav.home') }}</a></li>
                        <li><a href="{{ route('projetos') }}">{{ trans('nav.projects') }}</a></li>
                        <li><a href="{{ route('sobre') }}">{{ trans('nav.about') }}</a></li>
                        <li><a href="{{ route('contato') }}">{{ trans('nav.contact') }}</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>{{ trans('footer.social') }}</h3>
                    <div class="social-links">
                        <a href="#" target="_blank">GitHub</a>
                        <a href="#" target="_blank">LinkedIn</a>
                        <a href="mailto:dorianc.vieira@gmail.com">Email</a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; {{ "now"|date("Y") }} {{ app_name }}. {{ trans('footer.rights') }}.</p>
            </div>
        </div>
    </footer>

    {# Bootstrap Bundle (inclui Popper) #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    {# AOS - Inicializar animaÃ§Ãµes #}
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>AOS.init({ duration: 800, once: true });</script>
    
    {# Seu JS customizado #}
    <script src="/assets/js/script.js"></script>
    
    {% block scripts %}{% endblock %}
</body>
</html>
