							<button class="btn btn-sm btn-outline-light rounded-pill px-3" type="button" id="langDropdown" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="fas fa-globe me-1"></i>
								<span class="fw-semibold">{{ current_language|upper }}</span>
							</button>
							<ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-2" aria-labelledby="langDropdown">
